extends  layout.pug    

block content
  .content-wrapper
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1.dashboardTitle #{dashboards.title} 
            h1.chartTitle(contenteditable='true') Chart title
            
    .content.metric-parameter  
      select.form-select.form-select-sm(aria-label="Default select example", id='layer', style={width:'20%'})
          option(selected) Select Layer
          option(value='system') System
          option(value='container') Container
          option(value='application') Application

      .btn-group.button-host
        button.btn.btn-primary.dropdown-toggle(type="button", data-bs-toggle="dropdown",aria-expanded="false") Host           
        ul.dropdown-menu.host
          
      .btn-group.button-container               
      .btn-group
        button.btn.btn-secondary.dropdown-toggle(type="button", data-bs-toggle="dropdown",aria-expanded="false", id='measurement') Measurement           
        ul.dropdown-menu.measurement
                    
      .btn-group.button-field
        button.btn.btn-success.dropdown-toggle(type="button", data-bs-toggle="dropdown",aria-expanded="false", id='field') Field           
        ul.dropdown-menu.field

      .btn-group.button-info
        
    br
    .content.chart-parameter
      select.form-select.form-select-sm(aria-label="Default select example", id='type', style={width:'20%'})
          option(selected) Select Type
          option(value='number') Single Stat
          option(value='line') Line Chart
          option(value='bar') Bar Chart
          option(value='pie') Pie Chart
          
      select.form-select.form-select-sm(aria-label="Default select example", id='range', style={width:'20%'})
        option(selected) Select Time Range
        option(value='-1m') Past 1m
        option(value='-5m') Past 5m
        option(value='-15m') Past 15m
        option(value='-1h') Past 1h
        option(value='-3h') Past 3h
        option(value='-6h') Past 6h
        option(value='-12h') Past 12h
        option(value='-24h') Past 24h
      select.form-select.form-select-sm(aria-label="Default select example", id='interval', style={width:'20%'})
        option(selected) Select Time Interval
        option(value='10s') 10s
        option(value='30s') 30s
        option(value='1m') 1m
        option(value='5m') 5m
      select.form-select.form-select-sm(aria-label="Default select example", id='aggregate', style={width:'20%'})
        option(selected) Select Aggregate Function
        option(value='min') min
        option(value='max') max
        option(value='mean') mean
        option(value='sum') sum
    br    
    block chart   
        include chart    

    a.preview-chart(href="#",id='preview') PREVIEW
    br
    a.create-chart(href="#",id='save') SAVE

block js
  script(type='text/javascript').
    let data = !{JSON.stringify(dashboards)} 
  script(src="/public/chart.js") 