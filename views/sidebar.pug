aside.main-sidebar.sidebar-dark-primary.elevation-4(style='background-color: #130d40;' )
  a.brand-link(href='/dashboard-list', style="font-size: 1.8rem;display:flex;")
    img.brand-image(src="/images/dataCat.png", style="margin:2px 10px 0px 15px")
    span.brand-text.font-weight-light DataCat 
  .sidebar
    .user-panel.mt-3.pb-3.mb-3.d-flex
      .image
        img(src="/images/user.png",alt="User Image").img-circle.elevation-2
      .info
        a.d-block(href='#' style="font-size: 1.2rem;") #{userName}    
    nav.mt-2
      ul.nav.nav-pills.nav-sidebar.flex-column(data-widget="treeview" role="menu" data-accordion="false" style="font-size: 1.2rem;")
        li.nav-item
          a.nav-link.sidebar-dashboard(href=`/dashboard-list`)
            img(src='/images/dashboard.png', style='width:30px;height:30px;margin-right:10px;')
            p Dashboard
        //- li.nav-item
        //-   a.nav-link(href='#')
        //-     p Logs
        li.nav-item
          a.nav-link.sidebar-alert(href=`/alert-list`)
            img(src='/images/alert.png', style='width:24px;height:24px;margin-right:13px;margin-left:3px;')
            p Alert
        li.nav-item
          a.nav-link.sidebar-notify(href=`/notify-list`)
            img(src='/images/notify.png', style='width:24px;height:24px;margin-right:13px;margin-left:3px;')
            p Notify
        //- li.nav-items
        //-   a.nav-link.sidebar-profile(href='#')
        //-     p Profile
        //- li.nav-item
      .bottom(style="margin-top:auto;position: absolute;bottom: 0;")
        a.nav-link.sidebar-logout(href='#' style="font-size: 1.2rem;display:flex;")
          img(src='/images/logout.png', style='width:30px;height:30px;margin-right:9px;')
          p logout
        