extends  layout.pug

block content
  .content-wrapper
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6            
            h1 #{dashboards.title}
            h1 #{dashboards.description}
    .content
      a.create-chart(href="#") Add Chart
    
    if dashboards.charts.size!==0
      -var num =0;
      each item in dashboards.charts                    
        .content-chart    
          .card.card-primary.card-outline
            .card-header
              h3.card-title
                i.far.fa-chart-bar title                   

              .card-tools
                button.btn.btn-tool(type="button", data-card-widget="collapse")
                  i.fas.fa-minus
                      
                button.btn.btn-tool(type="button", data-card-widget="remove")
                  i.fas.fa-times
            
            .card-body(id=`line-chart-${num}`, style="height: 300px")
        -num= num+1        

block js  
  script(type='text/javascript').
    let data = !{JSON.stringify(dashboards)}        
  script(src="/public/dashboard.js")