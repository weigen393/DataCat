extends  layout.pug

block content
  .content-wrapper
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6   
            h1.dashboard-title(contenteditable='true') #{dashboards.title}            
            br
            h1.dashboard-description(contenteditable='true') #{dashboards.description}            
    .content
      a.create-chart(href="#") Add Chart
    
    if dashboards.charts.size!==0
      -var num =0;
      each item in dashboards.charts                    
        .content-chart    
          .card.card-primary.card-outline
            .card-header
              h3.card-title
                i.far.fa-chart-bar #{item.title}                   

              .card-tools
                button.btn.btn-tool(type="button",value=`${item._id.valueOf()}`,name='edit')
                  span.material-icons settings
                
                button.btn.btn-tool(type="button",value=`${item._id.valueOf()}`,name='delete')
                  span.material-icons delete
            
            .card-body(id=`line-chart-${num}`, style="height: 300px")
        -num= num+1        

block js  
  script(type='text/javascript').
    let data = !{JSON.stringify(dashboards)}        
  script(src="/public/dashboard.js")